<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>  <!-- Ajout manquant -->

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mongraphe.graphui.ClusteringController"
      spacing="10" style="-fx-padding: 20px;">
    
    <!-- Zone de texte pour afficher les informations calculées -->
    <TextArea fx:id="infoTextArea" prefHeight="300" prefWidth="500" editable="false" wrapText="true" />

    <!-- ComboBox pour la sélection de la mesure de similarité -->
    <ComboBox fx:id="clusteringComboBox" promptText="Méthode à utiliser:" />

    <!-- Section pour les boutons Next, Back et Annuler -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Region /> <!-- Espace vide pour pousser les boutons vers la droite -->
        <Button text="Back" fx:id="backButton" onAction="#handleBack"/>
        <Button text="Next" fx:id="nextButton" onAction="#handleNext"/>
        <Button text="Annuler" fx:id="cancelButton" onAction="#handleAnnuler"/>
    </HBox>
    
</VBox>

