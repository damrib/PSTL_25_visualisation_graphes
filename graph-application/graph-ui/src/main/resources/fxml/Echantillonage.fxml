<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mongraphe.graphui.EchantillonageController"
      spacing="10" style="-fx-padding: 20px;">
    
    <!-- Zone de texte pour afficher les informations calculÃ©es -->
    <TextArea fx:id="infoTextArea" prefHeight="300" prefWidth="500" editable="false" wrapText="true" />

    <!-- Section pour les seuils -->
    <HBox spacing="10">
        <Label text="Enter up threshold:"/>
        <TextField fx:id="upThresholdField" text="1"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Enter down threshold (coeff_antiarete):"/>
        <TextField fx:id="downThresholdField" text="0.5"/>
    </HBox>

    <!-- Section pour les boutons Next, Back et Annuler -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Region /> <!-- Espace vide pour pousser les boutons vers la droite -->
        <Button text="Next" fx:id="nextButton" onAction="#handleNext"/>
        <Button text="Back" fx:id="backButton" onAction="#handleBack"/>
        <Button text="Annuler" fx:id="cancelButton" onAction="#handleAnnuler"/>
    </HBox>
    
</VBox>
